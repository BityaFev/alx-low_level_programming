CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

school.o: school.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME)
	$(RM) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
